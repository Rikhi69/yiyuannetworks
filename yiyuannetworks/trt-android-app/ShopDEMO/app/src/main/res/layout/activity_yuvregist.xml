<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_register_root"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/csv_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.lxl.shop.widget.PierceMaskView
        android:id="@+id/pmv_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:id="@+id/tv_notify"
        android:layout_above="@id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="28sp"
        android:id="@+id/iv_change"
        android:src="@drawable/ios_reverse_camera"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="28sp"
        android:id="@+id/iv_photo"
        android:src="@drawable/photo"
        android:layout_marginEnd="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/back"
        android:src="@drawable/title_ic_back"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>