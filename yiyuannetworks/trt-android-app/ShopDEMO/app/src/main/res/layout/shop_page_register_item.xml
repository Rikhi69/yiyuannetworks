<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/number"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_alignParentLeft="true" />

    <com.lxl.shop.ui.ShopCircleImageView
        android:id="@+id/customer_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/customer_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customer_name"
            style="@style/text_16_000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/customer_id"
            style="@style/text_12_9e9e9e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        style="@style/text_12_e0b369"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shop_register_level"
        android:padding="5dp"
        android:text="会员等级" />


</RelativeLayout>