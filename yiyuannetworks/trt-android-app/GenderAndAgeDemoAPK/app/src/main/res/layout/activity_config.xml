<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/back"
            android:padding="@dimen/dp_5"
            android:src="@drawable/back_btn"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240">

        <LinearLayout
            android:id="@+id/text"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="Camera_ID:"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Camera_Rotate:"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Camera_PreView_W:"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:text="Camera_PreView_H:"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/text"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <EditText
                android:inputType="number"
                android:id="@+id/camera_id"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:inputType="number"
                android:id="@+id/camera_rotate"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:inputType="number"
                android:id="@+id/camera_w"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:inputType="number"
                android:id="@+id/camera_h"
                android:layout_width="@dimen/dp_60"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/setting"
                android:text="SetConfig"
                android:gravity="center"
                android:background="@drawable/tv_selector_bg"
                android:textColor="@drawable/tv_selector_color"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

</LinearLayout>