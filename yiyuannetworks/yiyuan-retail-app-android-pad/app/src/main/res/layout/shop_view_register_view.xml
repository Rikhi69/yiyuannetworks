<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/shop_register_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.yiyuan.ai.widget.CircleImageView
            android:id="@+id/user_icon_view_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shop_page_register_uphead" />

        <LinearLayout
            android:id="@+id/gender_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <com.yiyuan.ai.widget.StockTextView
                android:id="@+id/gender_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="22dp"
                app:stock_text_drawable_height="40dp"
                app:stock_text_drawable_padding="5dp"
                app:stock_text_drawable_src="@drawable/shop_register_man"
                app:stock_text_drawable_width="40dp" />

            <com.yiyuan.ai.widget.StockTextView
                android:id="@+id/gender_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/white"
                app:stock_text_drawable_height="40dp"
                app:stock_text_drawable_padding="5dp"
                app:stock_text_drawable_src="@drawable/shop_register_woman"
                app:stock_text_drawable_width="40dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/add_customer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/gender_view"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>